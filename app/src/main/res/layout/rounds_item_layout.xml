<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:id="@+id/list_item_parent_layout"
    android:background="#fff">

    <TextView
        android:id="@+id/round_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="30dp"
        android:paddingTop="8dp"
        android:text="#"
        android:textSize="@dimen/big_font"
        android:textColor="@color/secondaryText" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/round_number"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingLeft="25dp"
        >

        <TextView
            android:id="@+id/hour_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/round_number"
            android:text="00"
            android:textSize="@dimen/big_font" />

        <TextView
            android:id="@+id/colon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=":"
            android:textSize="@dimen/big_font" />

        <TextView
            android:id="@+id/minute_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/big_font" />

        <TextView
            android:id="@+id/colon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=":"
            android:textSize="@dimen/big_font"/>

        <TextView
            android:id="@+id/second_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/big_font" />
    </LinearLayout>


    <Button
        android:id="@+id/trash_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/ic_action_trash"
        android:gravity="right"
        android:visibility="gone"/>

</RelativeLayout>